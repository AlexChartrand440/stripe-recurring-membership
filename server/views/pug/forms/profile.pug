form.form-horizontal(action='/profile/update', method='POST')
  .form-group
    label.col-sm-3.control-label(for='email') Email
    .col-sm-4 {% include "fields/email-field.html" with {'value':user.email} %}
  .form-group
    label.col-sm-3.control-label(for='name') First Name
    .col-sm-4
      input#first_name.form-control.input-sm(type='text', name='first_name', placeholder='First Name', value='{{user.profile.first_name}}')
  .form-group
    label.col-sm-3.control-label(for='name') Last Name
    .col-sm-4
      input#last_name.form-control.input-sm(type='text', name='last_name', placeholder='Last Name', value='{{user.profile.last_name}}')
  .form-group
    label.col-sm-3.control-label(for='name') Company name
    .col-sm-4
      input#company_name.form-control.input-md(name='company_name', type='text', placeholder='Company name', required='', value='{{user.profile.company_name}}')
  .form-group
    label.col-sm-3.control-label(for='name') Customer ID
    .col-sm-4
      .form-control-static {{user.stripe.customerId}}

  .form-group
    label.col-sm-3.control-label(for='name') Plan
    .col-sm-4
      p.form-control-static

  .form-group
    label.col-sm-3.control-label(for='name') Last 4
    .col-sm-4
      p.form-control-static {{user.stripe.last4}}

  




  .form-group
    .col-sm-offset-3.col-sm-4
      button.btn.btn-primary(type='submit')
        span.ion-edit
